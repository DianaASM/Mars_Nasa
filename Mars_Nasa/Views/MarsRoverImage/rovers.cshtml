@model MarsNasa.Models.MarsRoverImage
@{
    ViewData["Title"] = "Mars Rover Pictures";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <div class="container">
        <div class="topnav">
            @Html.ActionLink("Home", "Index", "Home")
            @Html.ActionLink("Astronomy Picture of the Day", "apod", "ImageOfDay")
            @Html.ActionLink("Mars Weather", "Weather", "Weather")
            @Html.ActionLink("EpicEarth", "EpicEarth","EpicEarth")
            <a class="active">Mars Rover Pictures </a>
            @Html.ActionLink("About", "About", "About")
            
            <select id="page" onchange="doNavigate()"> 
                <option value="" selected="selected">Select</option> 
                <option value="@Url.Action("Index", "Home")">Home</option> 
                <option value="@Url.Action("apod", "ImageOfDay")">Astronomy Picture of the Day</option> 
                <option value="@Url.Action("Weather", "Weather")">Mars Weather</option> 
                <option value="@Url.Action("EpicEarth", "EpicEarth")">Epic Earth</option> 
                <option value="@Url.Action("Rovers" , "MarsRoverImage")">Mars Rover Pictures</option>
                <option value="@Url.Action("About", "About")">About</option> 
            </select> 
            <script>
                function doNavigate() {
                window.location.href = document.getElementById("page").value;
            }
            </script>
        </div>
        <div class="middle">
            <info>
             <input type = "text" id = "lbl1">0</input>
             <button id="prevsbtn" onclick="updatephoto(-1); return false;">Previous</button>
             <button id="nextbtn" onclick="updatephoto(1); return false;">Next</button>
             
             <script> 
             function updatephoto(index) {
             var i = document.getElementById('lbl1');
             i = i+index;
             document.getElementById('lbl1').innerHTML = i;

             if (i>3 || i<0) 
             {
                 i=0;
                 document.getElementById('lbl1').innerHTML = i;
             }
             if (i == 0)  {

                document.getElementById('pht1').src = "@Model.photos[0].img_src";
             }
                          if (i == 1)  {

                document.getElementById('pht1').src = "@Model.photos[1].img_src";
             }
                          if (i == 2)  {

                document.getElementById('pht1').src = "@Model.photos[2].img_src";
             }
                          if (i == 3)  {

                document.getElementById('pht1').src = "@Model.photos[3].img_src";
             }
             
             }

             </script>
            </info>
        </div>
    </div>
    <img id = "pht1" src="@Model.photos[0].img_src" >
    <div class="footer">USF MSBAIS, 2022.</div>
    
</body>

</html>